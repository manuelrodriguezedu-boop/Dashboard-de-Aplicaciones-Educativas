        function showSection(id) {
            document.getElementById('section-misiones').classList.add('hidden');
            document.getElementById('section-reglas').classList.add('hidden');
            document.getElementById('section-jurado').classList.add('hidden');
            
            document.getElementById('section-' + id).classList.remove('hidden');

            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('tab-active');
                btn.classList.add('text-slate-400');
            });
            document.getElementById('nav-' + id).classList.add('tab-active');
            document.getElementById('nav-' + id).classList.remove('text-slate-400');
            
            // Scroll to top
            window.scrollTo({ top: 400, behavior: 'smooth' });
        }

        function filterMissions() {
            const province = document.getElementById('province-filter').value;
            const grid = document.getElementById('missions-grid');
            grid.innerHTML = '';

            const filtered = province === 'all' ? missions : missions.filter(m => m.p === province);

            filtered.forEach(m => {
                let diffColor = "text-emerald-400";
                let badgeColor = "bg-emerald-500/20 text-emerald-500";
                
                if(m.d === "√âpico") {
                    diffColor = "text-yellow-400";
                    badgeColor = "bg-yellow-500/20 text-yellow-500";
                }
                if(m.d === "Dif√≠cil") {
                    diffColor = "text-red-400";
                    badgeColor = "bg-red-500/20 text-red-500";
                }

                const card = document.createElement('div');
                card.className = "challenge-card bg-slate-900 border border-slate-800 p-6 rounded-3xl relative overflow-hidden group cursor-pointer shadow-lg";
                card.innerHTML = `
                    <div class="absolute top-0 right-0 p-3 bg-slate-800 rounded-bl-2xl text-[10px] font-black text-slate-500 uppercase tracking-widest">
                        COD_${m.id}
                    </div>
                    <p class="text-xs font-black text-emerald-500 mb-1 tracking-tighter">${m.p}</p>
                    <h3 class="text-xl font-extrabold mb-4 group-hover:text-emerald-400 transition-colors uppercase italic">${m.t}</h3>
                    <div class="flex justify-between items-center mt-4 pt-4 border-t border-slate-800/50">
                        <span class="text-[10px] font-black uppercase px-2 py-1 rounded ${badgeColor}">${m.d}</span>
                        <span class="text-[10px] font-bold text-slate-500 uppercase">${m.c}</span>
                    </div>
                    <div class="absolute bottom-0 left-0 w-full h-1 bg-emerald-500 scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-500"></div>
                `;
                grid.appendChild(card);
            });
        }

        window.onload = filterMissions;
    </script>
</body>
</html>
